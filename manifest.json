{

  "manifest_version": 2,
  "name": "cold hotstar",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.sonyliv.com/*"],
      "js": ["background_script.js"]
    }
  ],
  "background" : {
    "scripts": [ "background_script.js" ]
  }
}
